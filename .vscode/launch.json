{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch",
			"type": "node",
			"request": "launch",
			"program": "lib/cores/core.js",
			"stopOnEntry": false,
			"args": [],
			"cwd": ".",
			"runtimeExecutable": null,
			"runtimeArgs": [
				"--nolazy"
			],
			"env": {
				"NODE_ENV": "development"
			},
			"externalConsole": false,
			"sourceMaps": false,
			"outDir": null
		},
        {
			"name": "Debug Tests",
			"type": "node",
			// Notice, we bypass the launcher and start the test runner directly
			"program": "node_modules/mocha/bin/_mocha",
			"stopOnEntry": true,
			// run the tests in the tests folder
			"args": ["--recursive", "--reporter", "spec"],
			"cwd": ".",
			"runtimeExecutable": null,
			"env": { }
		}, 
		{
			"name": "Attach",
			"type": "node",
			"request": "attach",
			"port": 5858
		}
	]
}